<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

	<modelVersion>4.0.0</modelVersion>
	<groupId>com.biit</groupId>
	<artifactId>drools-engine</artifactId>
	<version>0.1.0-SNAPSHOT</version>
	<name>BiiT Drools Engine</name>

	<distributionManagement>
		<repository>
			<id>central</id>
			<name>biit-releases</name>
			<url>https://dev.biit-solutions.com:8443/mavenartifactory/ext-release-local</url>
		</repository>
		<snapshotRepository>
			<id>snapshots</id>
			<name>libs-snapshot</name>
			<url>https://dev.biit-solutions.com:8443/mavenartifactory/libs-snapshot</url>
		</snapshotRepository>
	</distributionManagement>

	<scm>
		<connection>scm:git:dev.biit-solutions.com:BiiTDroolsEngine.git</connection>
		<developerConnection>scm:git:dev.biit-solutions.com:BiiTDroolsEngine.git</developerConnection>
		<tag>drools-engine</tag>
	</scm>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<!-- Version 6.2 of drools is not accepting special characters like 'Ã«', 
			do not update -->
		<drools.version>6.1.0.Final</drools.version>
		<org.testng.version>6.8.7</org.testng.version>
		<slf4j-log4j12.version>1.7.7</slf4j-log4j12.version>
		<maven-compiler-plugin.version>3.1</maven-compiler-plugin.version>
		<maven-surefire.version>2.17</maven-surefire.version>
		<maven-resources-plugin.version>2.7</maven-resources-plugin.version>
		<maven-release-plugin.version>2.5.1</maven-release-plugin.version>
		<maven-scm-provider-gitexe.version>1.9.2</maven-scm-provider-gitexe.version>
		<project.scm.id>git</project.scm.id>
		<!-- BiiT dependencies -->
		<form-structure.version>[0.2,0.3)</form-structure.version>
		<form-structure-submitted.version>[0.1,0.2)</form-structure-submitted.version>
		<form-structure-drools.version>[0.1,0.2)</form-structure-drools.version>
		<form-structure-orbeon.version>[0.2,0.3)</form-structure-orbeon.version>
		<plugin-manager.version>[0.1,0.2)</plugin-manager.version>
	</properties>

	<!-- JBOSS repository -->
	<repositories>
		<repository>
			<id>jboss-public-repository-group</id>
			<name>JBoss Public Repository Group</name>
			<url>http://repository.jboss.org/nexus/content/groups/public/</url>
			<layout>default</layout>
			<releases>
				<enabled>true</enabled>
				<updatePolicy>never</updatePolicy>
			</releases>
		</repository>
	</repositories>

	<dependencies>
		<!-- Logger -->
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-log4j12</artifactId>
			<version>${slf4j-log4j12.version}</version>
		</dependency>
		<!-- Drools -->
		<dependency>
			<groupId>org.drools</groupId>
			<artifactId>drools-core</artifactId>
			<version>${drools.version}</version>
		</dependency>
		<dependency>
			<groupId>org.drools</groupId>
			<artifactId>drools-compiler</artifactId>
			<version>${drools.version}</version>
		</dependency>
		<!-- Basic From Structure -->
		<dependency>
			<groupId>com.biit</groupId>
			<artifactId>form-structure</artifactId>
			<version>${form-structure.version}</version>
		</dependency>
		<!-- Submitted Form -->
		<dependency>
			<groupId>com.biit</groupId>
			<artifactId>form-structure-submitted</artifactId>
			<version>${form-structure-submitted.version}</version>
		</dependency>
		<!-- Drools Form -->
		<dependency>
			<groupId>com.biit</groupId>
			<artifactId>form-structure-drools</artifactId>
			<version>${form-structure-drools.version}</version>
		</dependency>
		<!-- Orbeon form -->
		<dependency>
			<groupId>com.biit</groupId>
			<artifactId>form-structure-orbeon</artifactId>
			<version>${form-structure-orbeon.version}</version>
		</dependency>
		<!-- Testing -->
		<dependency>
			<groupId>org.testng</groupId>
			<artifactId>testng</artifactId>
			<version>${org.testng.version}</version>
			<scope>test</scope>
		</dependency>
		<!-- Plugin Manager -->
		<dependency>
			<groupId>com.biit.plugins</groupId>
			<artifactId>plugin-manager</artifactId>
			<version>${plugin-manager.version}</version>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>${maven-compiler-plugin.version}</version>
				<configuration>
					<source>7</source>
					<target>7</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>${maven-surefire.version}</version>
				<configuration>
					<useFile>false</useFile>
					<trimStackTrace>false</trimStackTrace>
					<suiteXmlFiles>
						<suiteXmlFile>src/test/config/testng.xml</suiteXmlFile>
					</suiteXmlFiles>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-resources-plugin</artifactId>
				<version>${maven-resources-plugin.version}</version>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-release-plugin</artifactId>
				<version>${maven-release-plugin.version}</version>
				<dependencies>
					<dependency>
						<groupId>org.apache.maven.scm</groupId>
						<artifactId>maven-scm-provider-gitexe</artifactId>
						<version>${maven-scm-provider-gitexe.version}</version>
					</dependency>
				</dependencies>
				<configuration>
					<checkModificationExcludes>
						<checkModificationExclude>pom.xml</checkModificationExclude>
					</checkModificationExcludes>
				</configuration>
			</plugin>
		</plugins>
	</build>

</project>